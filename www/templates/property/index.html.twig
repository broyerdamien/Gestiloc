{% extends 'base.html.twig' %}

{% block title %}Property index{% endblock %}

{% block body %}
    <div class="container-fluid h-100">
        <div class="row flex-nowrap">
            <!-- Navbar latÃ©rale -->
            {% include '@shared/sidebare.html.twig' %}
            <main role="main" class="col-md-10 ml-sm-auto px-4">
                <h2 class='text-center title-h2'>Property index</h2>
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-md-12">
                            <div class="table-responsive">
                                <table class="table table-head">
                                    <thead>
                                    <tr>
                                        <th>Lots</th>
                                        <th>Type</th>
                                        <th>Area</th>
                                        <th>Rooms</th>
                                        <th>Lodgers</th>
                                        {#                                        <th>Address</th> #}
                                        {#                            <th>Building</th> #}
                                        {#                            <th>Etage</th> #}
                                        {#                            <th>Numero</th> #}
                                        {#                                        <th>Country</th> #}
                                        {#                                        <th>PostCode</th> #}

                                        {#                            <th>Area</th> #}
                                        {#                            <th>NumberOfParts</th> #}
                                        {#                            <th>Bedroom</th> #}
                                        {#                            <th>Bathroom</th> #}
                                        <th>Loyer</th>
                                        {#                            <th>RentalCharges</th> #}
                                        <th>actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for property in properties %}
                                        <tr>
                                            <td>{{ property.name }}<br>{{ property.numero }} {{ property.address }}
                                                <br>{{ property.postCode }} {{ property.country }}</td>
                                            <td>{{ property.type }}</td>
                                            <td>{{ property.area }}</td>
                                            <td>{{ property.numberOfParts }}</td>
                                            <td> {% if property.lodgers|length > 0 %}
                                                    <ul class="list-unstyled">
                                                        {% for lodger in property.lodgers %}
                                                            <li>{{ lodger.name }} ({{ lodger.firstname }})</li>
                                                        {% endfor %}
                                                    </ul>
                                                {% else %}
                                                    <ul>
                                                        No lodgers
                                                    </ul>
                                                {% endif %}</td>
                                            {#                                            #}{#                                <td>{{ property.building }}</td> #}
                                            {#                                            #}{#                                <td>{{ property.etage }}</td> #}
                                            {#                                            #}{#                                <td>{{ property.numero }}</td> #}
                                            {#                                            <td>{{ property.country }}</td> #}
                                            {#                                            <td>{{ property.postCode }}</td> #}
                                            {#                                            <td> #}
                                            {#                                            </td> #}
                                            {#                                            #}{#                                <td>{{ property.area }}</td> #}
                                            {#                                            #}{#                                <td>{{ property.numberOfParts }}</td> #}
                                            {#                                            #}{#                                <td>{{ property.bedroom }}</td> #}
                                            {#                                            #}{#                                <td>{{ property.bathroom }}</td> #}
                                            <td>{{ property.loyer }}</td>
                                            {#                                <td>{{ property.rentalCharges }}</td> #}
                                            <td>
                                                <div class="dropdown">
                                                    <button class="btn btn-secondary dropdown-toggle dropdown-actions"
                                                            type="button" data-bs-toggle="dropdown"
                                                            aria-expanded="false">
                                                        <img src="{{ asset('build/images/three_dots_icon.svg') }}">
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-actions">
                                                        <li><a class="dropdown-item"
                                                               href="{{ path('app_property_edit', {'id': property.id}) }}">edit</a>
                                                        </li>
                                                        <li><a class="dropdown-item"
                                                               href="{{ path('app_property_show', {'id': property.id}) }}">show</a>
                                                        </li>
                                                        <li><a class="dropdown-item" href="#">Something else here</a>
                                                        </li>
                                                        <li>{{ include('property/_delete_form.html.twig') }}</li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="16">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center">

                    <a href="{{ path('app_property_new') }}" class=" btn button-color">Create
                        new</a>

                </div>
            </main>
        </div>
    </div>

{% endblock %}
