{% extends 'base.html.twig' %}

{% block title %}{{ 'property.index.title'|trans }}{% endblock %}

{% block body %}
            <div class="text-center mb-4">
                <h1 class="mb-2">{{ 'property.index.title'|trans }}</h1>
                {% include 'shared/_breadcrumb.html.twig' with {
                    breadcrumb_items: [
                        { 'route': 'home', 'label': 'menu.home' },
                        { 'label': 'property.index.title' }
                    ]
                } %}
            </div>
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">{{ 'property.index.title'|trans }}</h3>
                    <a href="{{ path('app_property_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> {{ 'property.index.actions.create_new'|trans }}
                    </a>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                            <tr>
                                <th>{{ 'property.index.table.lots'|trans }}</th>
                                <th>{{ 'property.index.table.type'|trans }}</th>
                                <th>{{ 'property.index.table.area'|trans }}</th>
                                <th>{{ 'property.index.table.rooms'|trans }}</th>
                                <th>{{ 'property.index.table.lodgers'|trans }}</th>
                                <th>{{ 'property.index.table.actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for property in properties %}
                                <tr>
                                    <td>
                                        {{ property.name }}<br>
                                        {{ property.numero }} {{ property.address }}<br>
                                        {{ property.postCode }} {{ property.country }}
                                    </td>
                                    <td>{{ property.type }}</td>
                                    <td>{{ property.area }}</td>
                                    <td>{{ property.numberOfParts }}</td>
                                    <td>
                                        {% if property.lodgers|length > 0 %}
                                            <ul class="list-unstyled mb-0">
                                                {% for lodger in property.lodgers %}
                                                    <li>{{ lodger.name }} ({{ lodger.firstname }})</li>
                                                {% endfor %}
                                            </ul>
                                        {% else %}
                                            <span class="text-muted">{{ 'property.index.table.no_lodgers'|trans }}</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex flex-column gap-1 align-items-center">
                                            <a href="{{ path('app_property_edit', {'id': property.id}) }}"
                                               class="btn btn-outline-primary btn-wide">
                                                <i class="fas fa-edit"></i> {{ 'property.index.actions.edit'|trans }}
                                            </a>
                                            <a href="{{ path('app_property_show', {'id': property.id}) }}"
                                               class="btn btn-outline-success btn-wide">
                                                <i class="fas fa-eye"></i> {{ 'property.index.actions.show'|trans }}
                                            </a>
                                            {{ include('property/_delete_form.html.twig') }}
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted">
                                        {{ 'property.index.table.no_records'|trans }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-footer text-end">
                    <a href="{{ path('app_property_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> {{ 'property.index.actions.create_new'|trans }}
                    </a>
                </div>
            </div>
{% endblock %}
