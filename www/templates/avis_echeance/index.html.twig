{% extends 'base.html.twig' %}

{% block title %}{{ 'avis.index.title'|trans }}{% endblock %}

{% block body %}
    <div class="text-center mb-4">
        <h1 class="mb-2">{{ 'avis.index.title'|trans }}</h1>
        {% include 'shared/_breadcrumb.html.twig' with {
            breadcrumb_items: [
                { 'route': 'home', 'label': 'menu.home' },
                { 'label': 'avis.index.title' }
            ]
        } %}
    </div>
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">

            <a href="{{ path('app_avis_echeance_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> {{ 'avis.index.actions.create_new'|trans }}
            </a>
        </div>

        <div class="card-body">
            <form method="post" action="{{ path('app_avis_echeance_delete_selected') }}">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                    <tr>
                        <th>{{ 'avis.index.table.select'|trans }}</th>
                        <th>{{ 'avis.index.table.property'|trans }}</th>
                        <th>{{ 'avis.index.table.lodger'|trans }}</th>
                        <th>{{ 'avis.index.table.status'|trans }}</th>
                        <th>{{ 'avis.index.table.amount'|trans }}</th>
                        <th>{{ 'avis.index.table.remaining'|trans }}</th>
                        <th>{{ 'avis.index.table.excess'|trans }}</th>
                        <th>{{ 'avis.index.table.description'|trans }}</th>
                        <th>{{ 'avis.index.table.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for avis_echeance in avis_echeances %}
                        <tr>
                            <td><input type="checkbox" name="avis_echeances[]" value="{{ avis_echeance.id }}"></td>
                            <td>
                                {% for property in avis_echeance.location.properties %}
                                    <strong>{{ property.name }}</strong><br>
                                    {{ property.numero }} {{ property.address }}<br>
                                    {{ property.postCode }} {{ property.country }}
                                {% else %}
                                    <span class="text-muted">{{ 'avis.index.table.no_property'|trans }}</span>
                                {% endfor %}
                            </td>
                            <td>
                                {% for lodger in avis_echeance.location.lodgers %}
                                    {{ lodger.name }} {{ lodger.firstname }}
                                {% else %}
                                    <span class="text-muted">{{ 'avis.index.table.no_lodger'|trans }}</span>
                                {% endfor %}
                            </td>
                            <td>
                                {% if avis_echeance.paymentStatus.value == 'en attente' %}
                                    <span class="badge bg-warning">{{ ('payment.status.' ~ avis_echeance.paymentStatus.value)|trans }}</span>
                                {% elseif avis_echeance.paymentStatus.value == 'partiel' %}
                                    <span class="badge bg-info">{{ ('payment.status.' ~ avis_echeance.paymentStatus.value)|trans }}</span>
                                {% else %}
                                    <span class="badge bg-success">{{ ('payment.status.' ~ avis_echeance.paymentStatus.value)|trans }}</span>
                                {% endif %}
                            </td>
                            <td>{{ avis_echeance.amount }} €</td>
                            <td>{{ avis_echeance.remainingAmount }} €</td>
                            <td>{{ avis_echeance.excessAmount ?? 0 }} €</td>
                            <td>
                                {{ 'avis.index.table.rent_for'|trans }} :
                                <br>{{ avis_echeance.dateDebut ? avis_echeance.dateDebut|date('d-m-Y') : '' }}
                                {{ 'avis.index.table.to'|trans }} {{ avis_echeance.dateFin ? avis_echeance.dateFin|date('d-m-Y') : '' }}
                                <br>
                                {% for payment in avis_echeance.payments %}
                                    <ul class="mb-0">
                                        <li>
                                            {{ 'avis.index.table.received'|trans({
                                                '%amount%': payment.amount,
                                                '%date%': payment.paymentDate ? payment.paymentDate|date('d-m-Y') : 'N/A'
                                            }) }}
                                        </li>
                                    </ul>
                                {% endfor %}
                            </td>
                            <td class="text-center">
                                <div class="d-flex flex-column gap-1 align-items-center">
                                    <a href="{{ path('app_avis_echeance_edit', {'id': avis_echeance.id}) }}"
                                       class="btn btn-sm btn-outline-primary btn-wide">
                                        <i class="fas fa-edit"></i> {{ 'avis.index.actions.edit'|trans }}
                                    </a>
                                    <a href="{{ path('app_avis_echeance_show', {'id': avis_echeance.id}) }}"
                                       class="btn btn-sm btn-outline-success btn-wide">
                                        <i class="fas fa-eye"></i> {{ 'avis.index.actions.show'|trans }}
                                    </a>
                                    <button class="btn btn-sm btn-outline-danger delete-btn btn-wide"
                                            data-id="{{ avis_echeance.id }}"
                                            data-token="{{ csrf_token('delete' ~ avis_echeance.id) }}">
                                        <i class="fas fa-trash"></i> {{ 'avis.index.actions.delete'|trans }}
                                    </button>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9" class="text-center text-muted">
                                {{ 'avis.index.table.no_records'|trans }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="d-flex justify-content-between mt-3">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> {{ 'avis.index.actions.delete_selected'|trans }}
                    </button>
                    <a href="{{ path('app_avis_echeance_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> {{ 'avis.index.actions.create_new'|trans }}
                    </a>
                </div>
            </form>
        </div>
    </div>
    {% endblock %}
