{% extends 'base.html.twig' %}

{% block title %}{{ 'avis.show.title'|trans }}{% endblock %}

{% block body %}
            <div class="text-center mb-4">
                <h1 class="mb-2">{{ 'avis.show.title'|trans }}</h1>
                {% include 'shared/_breadcrumb.html.twig' with {
                    breadcrumb_items: [
                        { 'route': 'home', 'label': 'menu.home' },
                        { 'route': 'app_avis_echeance_index', 'label': 'avis.index.title' },
                        { 'label': 'avis.show.title' }
                    ]
                } %}
            </div>
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">{{ 'avis.show.details'|trans }}</h3>
                    <div>
                        <a href="{{ path('app_avis_echeance_edit', {'id': avis_echeance.id}) }}"
                           class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit"></i> {{ 'avis.show.actions.edit'|trans }}
                        </a>
                        <a href="{{ path('app_avis_echeance_index') }}" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> {{ 'avis.show.actions.back'|trans }}
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <tbody>
                        <tr>
                            <th>{{ 'avis.show.table.id'|trans }}</th>
                            <td>{{ avis_echeance.id }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'avis.show.table.date_start'|trans }}</th>
                            <td>{{ avis_echeance.dateDebut ? avis_echeance.dateDebut|date('d-m-Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'avis.show.table.date_end'|trans }}</th>
                            <td>{{ avis_echeance.dateFin ? avis_echeance.dateFin|date('d-m-Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'avis.show.table.status'|trans }}</th>
                            <td>
                                {% if avis_echeance.paymentStatus.value == 'en attente' %}
                                    <span class="badge bg-warning">{{ ('payment.status.' ~ avis_echeance.paymentStatus.value)|trans }}</span>
                                {% elseif avis_echeance.paymentStatus.value == 'partiel' %}
                                    <span class="badge bg-info">{{ ('payment.status.' ~ avis_echeance.paymentStatus.value)|trans }}</span>
                                {% else %}
                                    <span class="badge bg-success">{{ ('payment.status.' ~ avis_echeance.paymentStatus.value)|trans }}</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>{{ 'avis.show.table.amount'|trans }}</th>
                            <td>{{ avis_echeance.amount }} €</td>
                        </tr>
                        <tr>
                            <th>{{ 'avis.show.table.remaining'|trans }}</th>
                            <td>{{ avis_echeance.remainingAmount }} €</td>
                        </tr>
                        </tbody>
                    </table>

                    <!-- Historique des paiements -->
                    <h3 class="mt-4">{{ 'avis.show.history.title'|trans }}</h3>
                    <table class="table table-bordered table-striped">
                        <thead class="table-dark">
                        <tr>
                            <th>{{ 'avis.show.history.date'|trans }}</th>
                            <th>{{ 'avis.show.history.amount'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for payment in avis_echeance.payments %}
                            <tr>
                                <td>{{ payment.paymentDate ? payment.paymentDate|date('d-m-Y') : 'N/A' }}</td>
                                <td>{{ payment.amount }} €</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="2" class="text-center text-muted">
                                    {{ 'avis.show.history.no_payments'|trans }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a href="{{ path('app_avis_echeance_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> {{ 'avis.show.actions.back'|trans }}
                    </a>

                    <div class="d-flex gap-2">
                        <a href="{{ path('app_avis_echeance_edit', {'id': avis_echeance.id}) }}"
                           class="btn btn-outline-primary">
                            <i class="fas fa-edit"></i> {{ 'avis.show.actions.edit'|trans }}
                        </a>
                        {{ include('avis_echeance/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
{% endblock %}
