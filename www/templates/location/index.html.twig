{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
<div class="container-fluid h-100">
    <div class="row flex-nowrap">
        <!-- Navbar latÃ©rale -->
        {% include '@shared/sidebare.html.twig' %}
        <main role="main" class="col-md-10 ml-sm-auto px-4">
    <h2 class='text-center title-h2'>Location index</h2>
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-12">
                <div class="table-responsive">
                    <table class="table table-head">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Type</th>
                            <th>Property</th>
                            <th>lodger</th>
                            <th>loyer</th>
                            <th>Depot</th>
                            <th>StartDate</th>
                            <th>EndDate</th>
                            <th>Etat</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for location in locations %}
                            <tr>
                                <td>{{ location.id }}</td>
                                <td>{{ location.Type }}</td>
                                <td> {% if location.properties|length > 0 %}
                                        <ul class="list-unstyled">
                                            {% for properties in location.properties %}
                                                <li>{{ properties.name }} </li>
                                            {% endfor %}
                                        </ul>
                                    {% else %}
                                        <ul>
                                            No lodgers
                                        </ul>
                                    {% endif %}</td>
                                <td> {% if location.lodgers|length > 0 %}
                                        <ul class="list-unstyled">
                                            {% for location in location.lodgers %}
                                                <li>{{ location.name }} ({{ location.firstname }})</li>

                                            {% endfor %}
                                        </ul>
                                    {% else %}
                                        <ul>
                                            No lodgers
                                        </ul>
                                    {% endif %}</td>
                                <td>{% if location.properties|length > 0 %}
                                        <ul class="list-unstyled">
                                            {% for properties in location.properties %}
                                                <li>{{ properties.loyer }} </li>
                                            {% endfor %}
                                        </ul>
                                    {% else %}
                                        <ul>
                                            No lodgers
                                        </ul>
                                    {% endif %}</td>
                                <td>{{ location.Depot }}</td>
                                <td>{{ location.startDate ? location.startDate|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ location.endDate ? location.endDate|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ location.etat ? 'Yes' : 'No' }}</td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-secondary dropdown-toggle dropdown-actions" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <img src="{{ asset('build/images/three_dots_icon.svg') }}">
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-actions">
                                            <li><a class="dropdown-item" href="{{ path('app_location_edit', {'id': location.id}) }}">edit</a></li>
                                            <li><a class="dropdown-item" href="{{ path('app_location_show', {'id': location.id}) }}">show</a></li>
                                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <a href="{{ path('app_location_new') }}" class="btn button-color ">Create new</a>
    </div>
        </main>
    </div>
</div>
{% endblock %}
