<div class="d-flex flex-column">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-1">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">{{ subtitle|default('location.form.title')|trans }}</h3>
                </div>

                <div class="card-body">
                    {{ form_start(form) }}

                    <h5 class="mb-3 text-primary"><i class="fas fa-info-circle"></i> {{ 'location.form.general'|trans }}</h5>
                    <div class="mb-3">{{ form_row(form.Type) }}</div>
                    <div class="mb-3">{{ form_row(form.Depot) }}</div>
                    <div class="mb-3">{{ form_row(form.loyer) }}</div>
                    <div class="mb-3">{{ form_row(form.etat) }}</div>

                    <h5 class="mb-3 text-primary"><i class="fas fa-calendar-alt"></i> {{ 'location.form.dates'|trans }}</h5>
                    <div class="mb-3">{{ form_row(form.startDate) }}</div>
                    <div class="mb-3">{{ form_row(form.endDate) }}</div>

                    <h5 class="mb-3 text-primary"><i class="fas fa-link"></i> {{ 'location.form.relations'|trans }}</h5>
                    <div class="mb-3">{{ form_row(form.properties) }}</div>
                    <div class="mb-3">{{ form_row(form.lodgers) }}</div>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a href="{{ back_path|default(path('app_location_index')) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> {{ 'location.form.back'|trans }}
                    </a>
                    <button class="btn btn-primary btn-wide">
                        <i class="fas fa-save"></i> {{ button_label|default('admin.save')|trans }}
                    </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
