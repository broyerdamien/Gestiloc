{% extends 'base.html.twig' %}

{% block title %}{{ 'payment.index.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'payment.index.title'|trans }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>{{ 'payment.index.table.id'|trans }}</th>
            <th>{{ 'payment.index.table.amount'|trans }}</th>
            <th>{{ 'payment.index.table.date'|trans }}</th>
            <th>{{ 'payment.index.table.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.amount }}</td>
                <td>{{ payment.paymentDate ? payment.paymentDate|date('d-m-Y H:i') : '' }}</td>
                <td>
                    <a href="{{ path('app_payment_show', {'id': payment.id}) }}">
                        {{ 'payment.index.actions.show'|trans }}
                    </a>
                    <a href="{{ path('app_payment_edit', {'id': payment.id}) }}">
                        {{ 'payment.index.actions.edit'|trans }}
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'payment.index.table.no_records'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_payment_new') }}">
        {{ 'payment.index.actions.create_new'|trans }}
    </a>
{% endblock %}
