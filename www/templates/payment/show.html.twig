{% extends 'base.html.twig' %}

{% block title %}{{ 'payment.show.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'payment.show.title'|trans }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'payment.show.table.id'|trans }}</th>
            <td>{{ payment.id }}</td>
        </tr>
        <tr>
            <th>{{ 'payment.show.table.amount'|trans }}</th>
            <td>{{ payment.amount }}</td>
        </tr>
        <tr>
            <th>{{ 'payment.show.table.date'|trans }}</th>
            <td>{{ payment.paymentDate ? payment.paymentDate|date('d-m-Y H:i') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_payment_index') }}">{{ 'payment.show.actions.back'|trans }}</a>
    <a href="{{ path('app_payment_edit', {'id': payment.id}) }}">{{ 'payment.show.actions.edit'|trans }}</a>

    {{ include('payment/_delete_form.html.twig') }}
{% endblock %}
