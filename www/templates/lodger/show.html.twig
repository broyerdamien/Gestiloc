    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lodger.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ lodger.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ lodger.firstname }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ lodger.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ lodger.phone }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ lodger.mail }}</td>
            </tr>
            <tr>
                <th>DateOfBirth</th>
