{% extends 'base.html.twig' %}

{% block title %}{{ 'lodger.index.title'|trans }}{% endblock %}

{% block body %}
            <div class="text-center mb-4">
                <h1 class="mb-2">{{ 'lodger.index.title'|trans }}</h1>
                {% include 'shared/_breadcrumb.html.twig' with {
                    breadcrumb_items: [
                        { 'route': 'home', 'label': 'menu.home' },
                        { 'label': 'lodger.index.title' }
                    ]
                } %}
            </div>
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">{{ 'lodger.index.title'|trans }}</h3>
                    <a href="{{ path('app_lodger_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> {{ 'lodger.index.actions.create_new'|trans }}
                    </a>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                            <tr>
                                <th>{{ 'lodger.index.table.id'|trans }}</th>
                                <th>{{ 'lodger.index.table.name'|trans }}</th>
                                <th>{{ 'lodger.index.table.property'|trans }}</th>
                                <th>{{ 'lodger.index.table.address'|trans }}</th>
                                <th>{{ 'lodger.index.table.phone'|trans }}</th>
                                <th>{{ 'lodger.index.table.mail'|trans }}</th>
                                <th>{{ 'lodger.index.table.salary'|trans }}</th>
                                <th>{{ 'lodger.index.table.actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for lodger in lodgers %}
                                <tr>
                                    <td>{{ lodger.id }}</td>
                                    <td>{{ lodger.name }} {{ lodger.firstname }}</td>
                                    <td>
                                        {% if lodger.property %}
                                            <strong>{{ lodger.property.name }}</strong><br>
                                            {{ lodger.property.numero }} {{ lodger.property.address }}<br>
                                            {{ lodger.property.postCode }} {{ lodger.property.country }}
                                        {% else %}
                                            <span class="text-muted">{{ 'lodger.index.table.no_property'|trans }}</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ lodger.address }}</td>
                                    <td>{{ lodger.phone }}</td>
                                    <td>{{ lodger.mail }}</td>
                                    <td>{{ lodger.salary }}</td>
                                    <td class="text-center">
                                        <div class="d-flex flex-column gap-1 align-items-center">
                                            <a href="{{ path('app_lodger_edit', {'id': lodger.id}) }}"
                                               class="btn btn-sm btn-outline-primary btn-wide">
                                                <i class="fas fa-edit"></i> {{ 'lodger.index.actions.edit'|trans }}
                                            </a>
                                            <a href="{{ path('app_lodger_show', {'id': lodger.id}) }}"
                                               class="btn btn-sm btn-outline-success btn-wide">
                                                <i class="fas fa-eye"></i> {{ 'lodger.index.actions.show'|trans }}
                                            </a>
                                            {{ include('lodger/_delete_form.html.twig') }}
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8" class="text-center text-muted">
                                        {{ 'lodger.index.table.no_records'|trans }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-footer text-end">
                    <a href="{{ path('app_lodger_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> {{ 'lodger.index.actions.create_new'|trans }}
                    </a>
                </div>
            </div>
        </div>
{% endblock %}
