{% extends 'base.html.twig' %}

{% block title %}{{ 'lodger.index.title'|trans }}{% endblock %}

{% block body %}
    <div class="container-fluid h-100">
        <div class="row flex-nowrap">
            <!-- Navbar latÃ©rale -->
            {% include '@shared/sidebare.html.twig' %}
            <main role="main" class="col-md-10 ml-sm-auto px-4 ">
                <h2 class='text-center title-h2 '>{{ 'lodger.index.title'|trans }}</h2>
                <div class="container mb-5">
                    <div class="row">
                        <div class="col-12 col-md-12">
                            <div class="table-responsive">
                                <table class="table table-head">
                                    <thead>
                                    <tr>
                                        <th>{{ 'lodger.index.table.id'|trans }}</th>
                                        <th>{{ 'lodger.index.table.name'|trans }}</th>
                                        <th>{{ 'lodger.index.table.property'|trans }}</th>
                                        <th>{{ 'lodger.index.table.address'|trans }}</th>
                                        <th>{{ 'lodger.index.table.phone'|trans }}</th>
                                        <th>{{ 'lodger.index.table.mail'|trans }}</th>
                                        <th>{{ 'lodger.index.table.salary'|trans }}</th>
                                        <th>{{ 'lodger.index.table.actions'|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for lodger in lodgers %}
                                        <tr>
                                            <td>{{ lodger.id }}</td>
                                            <td>{{ lodger.name }} {{ lodger.firstname }}</td>
                                            <td>
                                                {% if lodger.property %}
                                                    {{ lodger.property.name }}<br>
                                                    {{ lodger.property.numero }} {{ lodger.property.address }}<br>
                                                    {{ lodger.property.postCode }} {{ lodger.property.country }}
                                                {% else %}
                                                    {{ 'lodger.index.table.no_property'|trans }}
                                                {% endif %}
                                            </td>
                                            <td>{{ lodger.address }}</td>
                                            <td>{{ lodger.phone }}</td>
                                            <td>{{ lodger.mail }}</td>
                                            <td>{{ lodger.salary }}</td>
                                            <td class="border-left">
                                                <div class="dropdown">
                                                    <button class="btn btn-secondary dropdown-toggle dropdown-actions"
                                                            type="button" data-bs-toggle="dropdown"
                                                            aria-expanded="false">
                                                        <img src="{{ asset('build/images/three_dots_icon.svg') }}">
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-actions">
                                                        <li>
                                                            <a class="dropdown-item"
                                                               href="{{ path('app_lodger_edit', {'id': lodger.id}) }}">
                                                                {{ 'lodger.index.actions.edit'|trans }}
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item"
                                                               href="{{ path('app_lodger_show', {'id': lodger.id}) }}">
                                                                {{ 'lodger.index.actions.show'|trans }}
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" href="#">
                                                                {{ 'lodger.index.actions.something_else'|trans }}
                                                            </a>
                                                        </li>
                                                        <li>
                                                            {{ include('lodger/_delete_form.html.twig') }}
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="8">{{ 'lodger.index.table.no_records'|trans }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <a href="{{ path('app_lodger_new') }}" class="btn button-color">
                        {{ 'lodger.index.actions.create_new'|trans }}
                    </a>
                </div>
            </main>
        </div>
    </div>
{% endblock %}
