{% extends 'base.html.twig' %}

{% block title %}Lodger index{% endblock %}

{% block body %}
    <div class="container-fluid h-100">
        <div class="row flex-nowrap">
            <!-- Navbar latérale -->
            {% include '@shared/sidebare.html.twig' %}
            <main role="main" class="col-md-10 ml-sm-auto px-4">
                <h2 class='text-center title-h2'>Lodger index</h2>
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-md-12">
                            <div class="table-responsive">
                                <table class="table table-head">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Property</th>
                                        <th>Address</th>
                                        <th>Phone</th>
                                        <th>Mail</th>
                                        {#                            <th>DateOfBirth</th> #}
                                        {#                            <th>Job</th> #}
                                        <th>Salary</th>
                                        {#                            <th>Sex</th> #}
                                        <th>actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for lodger in lodgers %}
                                        <tr>
                                            <td>{{ lodger.id }}</td>
                                            <td>{{ lodger.name }} {{ lodger.firstname }}</td>
                                            <td>   {% if lodger.property %}
                                                    {{ lodger.property.name }}<br>
                                                    {{ lodger.property.numero }}  {{ lodger.property.address }}<br>
                                                    {{ lodger.property.postCode }}  {{ lodger.property.country }}
                                                {% else %}
                                                    Pas de propriété
                                                {% endif %}</td>
                                            <td>{{ lodger.address }}</td>
                                            <td>{{ lodger.phone }}</td>
                                            <td>{{ lodger.mail }}</td>
                                            {#                                <td>{{ lodger.dateOfBirth ? lodger.dateOfBirth|date('Y-m-d') : '' }}</td> #}
                                            {#                                <td>{{ lodger.job }}</td> #}
                                            <td>{{ lodger.salary }}</td>
                                            {#                                <td>{{ lodger.sex }}</td> #}
                                            <td class="border-left">
                                                <div class="dropdown">
                                                    <button class="btn btn-secondary dropdown-toggle dropdown-actions" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <img src="{{ asset('build/images/three_dots_icon.svg') }}">
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-actions">
                                                        <li><a class="dropdown-item" href="{{ path('app_lodger_edit', {'id': lodger.id}) }}">edit</a></li>
                                                        <li><a class="dropdown-item" href="{{ path('app_lodger_show', {'id': lodger.id}) }}">show</a></li>
                                                        <li><a class="dropdown-item" href="#">Something else here</a></li>
                                                       <li>{{ include('lodger/_delete_form.html.twig') }}</li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="11">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <a href="{{ path('app_lodger_new') }}" class="btn button-color">Create
                        new</a>
                </div>
            </main>
        </div>
    </div>
{% endblock %}

