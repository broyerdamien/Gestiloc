<div class="d-flex flex-column">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-1">
                <!-- Header -->
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">{{ subtitle|trans|default('admin.labels') }}</h3>
                </div>

                {{ form_start(form) }}

                <!-- Section : infos personnelles -->
                <div class="card-body border-bottom">
                    <h5 class="mb-3 text-primary"><i class="fas fa-user"></i> {{ 'lodger.form.personal'|trans }}</h5>
                    <div class="mb-3">{{ form_row(form.name) }}</div>
                    <div class="mb-3">{{ form_row(form.firstname) }}</div>
                    <div class="mb-3">{{ form_row(form.dateOfBirth) }}</div>
                    <div class="mb-3">{{ form_row(form.sex) }}</div>
                </div>

                <!-- Section : coordonnÃ©es -->
                <div class="card-body border-bottom">
                    <h5 class="mb-3 text-primary"><i class="fas fa-home"></i> {{ 'lodger.form.contact'|trans }}</h5>
                    <div class="mb-3">{{ form_row(form.address) }}</div>
                    <div class="mb-3">{{ form_row(form.phone) }}</div>
                    <div class="mb-3">{{ form_row(form.mail) }}</div>
                </div>

                <!-- Section : situation -->
                <div class="card-body">
                    <h5 class="mb-3 text-primary"><i class="fas fa-briefcase"></i> {{ 'lodger.form.job'|trans }}</h5>
                    <div class="mb-3">{{ form_row(form.job) }}</div>
                    <div class="mb-3">{{ form_row(form.salary) }}</div>
                    <div class="mb-3">{{ form_row(form.property) }}</div>
                </div>

                <!-- Footer -->
                <div class="card-footer d-flex justify-content-between">
                    <a href="{{ back_path|default(path('app_lodger_index')) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> {{ 'property.show.actions.back'|trans }}
                    </a>
                    <button class="btn btn-primary btn-wide">
                        <i class="fas fa-save"></i> {{ button_label|trans|default('admin.save') }}
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
